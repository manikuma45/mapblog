<h1><%= @user.name %></h1>
<%= link_to 'edit', edit_user_registration_path %>
<hr>

<% blogs.each do |blog| %>
  <div>
    <div>
      <%= blog.user.name %>
    </div>

    <div>
      <%= blog.content %>
    </div>

    <div class="blogs_image">
      <%= image_tag blog.image.url if blog.image? %>
    </div>

    <%= link_to 'Show', blog, remote: true, data: {lat: "#{blog.lat}", lng: "#{blog.lng}"}, onClick: "changeCenter(event);" %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
    <hr>
  </div>
<% end %>