<% blogs.each do |blog| %>
  <div>
    <div>
      <%= link_to user_path(id: blog.user.id) do %>
        <%= image_tag blog.user.icon.thumb.url %>
        <%= blog.user.name %>
      <% end %>
    </div>

    <div>
      <%= blog.content %>
    </div>

    <div class="blogs_image">
      <%= image_tag blog.image.url if blog.image? %>
    </div>

    <%= link_to 'Show', blog, remote: true, data: {lat: "#{blog.lat}", lng: "#{blog.lng}"}, onClick: "changeCenter(event);" %>

    <div id="likes_area_<%= blog.id %>">
      <%= render partial: 'likes/like', locals: { blog: blog, like: Like.find_by(blog_id: blog.id, user_id: current_user.id) } %>
    </div>
    
    <% if current_user.id == blog.user_id %>
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
    <% end %>
    <hr>
  </div>
<% end %>